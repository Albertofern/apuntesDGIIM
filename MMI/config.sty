% Matriz 2x2
\newcommand{\m}[4]{%
  \begin{pmatrix} #1 & #2 \\ #3 & #4\end{pmatrix}
}

% Matriz 3x3
\newcommand{\mm}[9]{%
  \begin{pmatrix} #1 & #2 & #3\\ #4 & #5 & #6\\ #7 & #8 & #9\end{pmatrix}
}

% Determinante 2x2
\newcommand{\detm}[4]{%
  \begin{vmatrix} #1 & #2 \\ #3 & #4\end{vmatrix}
}
% Determinante 3x3
\newcommand{\detmm}[9]{%
  \begin{vmatrix} #1 & #2 & #3\\ #4 & #5 & #6\\ #7 & #8 & #9\end{vmatrix}
}

